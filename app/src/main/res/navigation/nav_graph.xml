<?xml version="1.0" encoding="utf-8"?>
<navigation
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/mainFragment">

    <!--In the label field of fragment you can give the name that you want to show in the toolbar-->
    <fragment
        android:id="@+id/mainFragment"
        android:name="com.revolve44.mywindturbine.fragments.MainScreenFragment"
        android:label="Home"
        tools:layout="@layout/fragment_mainscreen" >
        <action
            android:id="@+id/action_mainFragment_to_calibrationFragment"
            app:destination="@id/calibrationFragment" />
        <action
            android:id="@+id/action_mainFragment_to_StatisticsFragment"
            app:destination="@id/statisticsFragment" />
        <action
            android:id="@+id/action_mainFragment_to_SettingsFragment"
            app:destination="@id/settingsFragment" />

    </fragment>

    <fragment
        android:id="@+id/statisticsFragment"
        android:name="com.revolve44.mywindturbine.fragments.StatisticsFragment"
        android:label="Dashboard"
        tools:layout="@layout/fragment_statistics" />

    <fragment
        android:id="@+id/calibrationFragment"
        android:name="com.revolve44.mywindturbine.fragments.CalibrationFragment"
        android:label="Profile"
        tools:layout="@layout/fragment_calibration" />

    <fragment
        android:id="@+id/settingsFragment"
        android:name="com.revolve44.mywindturbine.fragments.SettingsFragment"
        android:label="Settings"
        tools:layout="@layout/fragment_settings" />

</navigation>