<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">


    //Toolbar
    <style name="DrawerIconStyle" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="color">@color/white</item>
        <item name="iconTint">@color/black</item>

    </style>
    <style name="ButtonText" parent="@android:style/Widget.Button">
        <item name="android:textColor">@color/white</item>
        <item name="android:colorBackground">@color/black_night</item>

        <item name="android:background">@drawable/background_of_button</item><!-- only way to change this is to change the src image -->
    </style>

    <style name="toolbar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">48dp</item>
        <item name="colorControlNormal">@android:color/white</item>
        <item name="android:minHeight">?attr/actionBarSize</item>
        <item name="color">#FFDC00</item>
        <item name="background">@color/black</item>
        <item name="colorOnBackground">@color/black</item>
<!--        <item name="android:theme">@style/ThemeOverlay.AppCompat.Light</item>-->
<!--        <item name="windowActionBar">false</item>-->
<!--        <item name="windowNoTitle">true</item>-->
        <!--        <item name="android:theme">@style/ThemeOverlay.AppCompat.Light</item>-->
    </style>

    <style name="AppTheme.Toolbar" parent="Theme.AppCompat.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/black</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">48dp</item>
        <item name="colorControlNormal">@android:color/white</item>
        <item name="android:minHeight">?attr/actionBarSize</item>
        <item name="android:textColor">@color/white</item>
        <item name="background">@color/black</item>

    </style>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="fontFamily">@font/montserrat</item>
        <item name="colorPrimary">@color/greenx</item>
        <item name="colorPrimaryDark">@color/black</item>
        <item name="colorAccent">@color/redx</item>
        <item name="android:textColor">@color/black</item>

    </style>

    <style name="AppTheme.splashScreenTheme" parent="AppTheme">
        <item name="drawerArrowStyle">@style/DrawerIconStyle</item>
        <!--&gt;>>>>>> experimental-->
        <item name="android:windowBackground">@drawable/splash_image</item>
        <item name="android:statusBarColor" tools:ignore="NewApi" tools:targetApi="lollipop">@color/black</item>
    </style>

    <style name="AppTheme.ConfirmFragment" parent="AppTheme">
        <item name="drawerArrowStyle">@style/DrawerIconStyle</item>
        <!--&gt;>>>>>> experimental-->
        <item name="android:textColor">@color/blue_special</item>
    </style>
<!--    <style name="AppTheme.NoActionBar">-->
<!--        <item name="windowActionBar">false</item>-->
<!--        <item name="windowNoTitle">true</item>-->
<!--    </style>-->


</resources>